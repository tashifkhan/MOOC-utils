{
  "name": "nptel-assignment-solver",
  "version": "1.0.0",
  "description": "AI-powered assignment solver for NPTEL courses",
  "type": "module",
  "scripts": {
    "dev:chrome": "vite build --watch --mode chrome",
    "dev:firefox": "vite build --watch --mode firefox",
    "build:chrome": "vite build --mode chrome",
    "build:firefox": "vite build --mode firefox",
    "build": "bun run build:chrome && bun run build:firefox",
    "lint": "eslint src/ --ext .js",
    "format": "prettier --write src/"
  },
  "devDependencies": {
    "vite": "^5.4.0",
    "webextension-polyfill": "^0.12.0",
    "eslint": "^8.57.0",
    "prettier": "^3.3.0"
  },
  "keywords": [
    "chrome-extension",
    "firefox-extension",
    "nptel",
    "ai",
    "gemini"
  ],
  "license": "MIT"
}
